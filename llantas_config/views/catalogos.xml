        <record id="tree_view_almacen" model="ir.ui.view">
            <field name="name">tree.almacen</field>
            <field name="model">llantas_config.almacen</field>
            <field name="arch" type="xml">
                <tree string="Status" editable="bottom">
                    <field name="name"/>

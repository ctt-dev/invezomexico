<odoo>
    <data>
        <record id="walmar_category_install_tree" model="ir.ui.view">
            <field name="name">walmart.category.install.tree</field>
            <field name="model">marketplaces.category</field>
            <field name="arch" type="xml">
                <tree string="Categorías">
                    <field name="group"/>
                    <field name="name"/>
                    <field name="is_installed"/>
                </tree>
            </field>
        </record>
        
        <record id="view_walmart_category_install" model="ir.ui.view">
            <field name="name">Agregar categorías</field>
            <field name="model">walmart.category.install</field>
            <field name="arch" type="xml">
                <form string="Agregar categorías">
                    <group>
                        <field name="categ_ids" widget="many2many_tags"
                            context="{'tree_view_ref': 'ctt_walmart.walmar_category_install_tree'}" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="install_categs" string="Agregar" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancelar" class="btn-secondary"/>
                    </footer>
                </form>
           </field>
        </record>
        
        <record id="action_view_marketplaces_category_install" model="ir.actions.act_window">
            <field name="name">Agregar categorías</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">walmart.category.install</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
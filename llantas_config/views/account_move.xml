<odoo>
    <data>
        <record id="form_view_account_move_inherit" model="ir.ui.view">
            <field name="name">Account_move</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoice_tab']//field//tree//field[@name='account_id']" position="after">
                    <field name="no_pedimento"/>
                </xpath>
                <xpath expr="//field[@name='tax_cash_basis_origin_move_id']" position="before">
                    <field name="pronto_pago_dias_vencimiento" string="Pronto pago - DÃ­as de vencimiento"/>
                    <field name="pronto_pago_porcentaje" string="Pronto pago - Porcentaje"/>
                    <field name="pronto_pago_fecha_vencimiento"/>
                    <field name="pronto_pago_dias_para_vencimiento"/>
                    <field name="pronto_pago_descuento"/>
                    <field name="pronto_pago_total_con_descuento"/>
                </xpath>
            </field>
        </record>
        
        <record id="account_view_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account_view_invoice_tree_inherit</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="partner_id" optional="hide"/>
                    <field name="pronto_pago_dias_vencimiento" optional="hide"/>
                    <field name="pronto_pago_porcentaje" optional="hide"/>
                    <field name="pronto_pago_fecha_vencimiento" optional="hide"/>
                    <field name="pronto_pago_dias_para_vencimiento" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='company_currency_id']" position="before">
                    <field name="pronto_pago_descuento" sum="pronto_pago_descuento" optional="hide"/>
                    <field name="pronto_pago_total_con_descuento" sum="pronto_pago_total_con_descuento" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
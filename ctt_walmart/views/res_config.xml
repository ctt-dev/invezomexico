<odoo>
    <data>
        <record id="walmart_settings_menu_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="base.res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'ctt_marketplaces'}</field>
        </record>

        <record id="ctt_walmart_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ctt.meli</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="ctt_marketplaces.ctt_marketplaces_res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='marketplaces_settings_block']" position="inside">
                    <h2>Walmart API</h2>
                    <div class="col-xs-12 row o_settings_container" id="mercado_libre_login">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane border-start-0">
                                <div class="content-group">
                                    <div class="row mt4">
                                        <label class="col-lg-3" for="walmart_client_id"/>
                                        <field name="walmart_client_id"/>
                                    </div>
                                    <div class="row mt4">
                                        <label class="col-lg-3" for="walmart_client_secret"/>
                                        <field name="walmart_client_secret" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
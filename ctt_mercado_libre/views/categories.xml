<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_mercadolibre_categories">
            <field name="name">Categorías</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mercadolibre.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_marketplaces" name="Marketplaces" parent="stock.menu_stock_root" sequence="9"/>
        <menuitem id="menu_mercadolibre" name="Mercado Libre" parent="menu_marketplaces" sequence="1"/>
        <menuitem id="menu_meli_categories"
            action="action_mercadolibre_categories"
            parent="menu_mercadolibre"
            name="Categorías" />
        
        <record id="ctt_mercado_libre_category_tree" model="ir.ui.view">
            <field name="name">mercadolibre.category.tree</field>
            <field name="model">mercadolibre.category</field>
            <field name="arch" type="xml">
               <tree>
                   <field name="name"/>
                   <field name="meli_id"/>
               </tree>
            </field>
        </record>

        <record id="ctt_mercado_libre_category_form" model="ir.ui.view">
            <field name="name">mercadolibre.category.form</field>
            <field name="model">mercadolibre.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="meli_id"/>
                        </group>
                        <field name="attribute_ids">
                            <tree>
                                <field name="name"/>
                                <field name="meli_id"/>
                                <field name="values"/>
                                <field name="type"/>
                                <field name="required"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
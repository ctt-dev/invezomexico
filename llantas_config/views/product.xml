<odoo>
    <data>
        <record id="view_product_template_pos_form1" model="ir.ui.view">
            <field name="name">Product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='general_information']//group//group[@name='group_general']//field[@name='product_tooltip']" position="after">
                     <field name="es_llanta"/>
                     <field name="es_paquete"/>
                     <field name="pkg_type" attrs="{'invisible': [('es_paquete', '=', False)], 'required': [('es_paquete', '=', False)]}"/>
                     <field name="sku_alternos" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                     <field name="marca_llanta" />
                     <field name="modelo_llanta" />
                     <field name="medida_llanta" />
                     <field name="indice_carga" />
                     <field name="indice_velocidad" />
                     <field name="ancho" class="oe_inline"/>
                     <field name="alto" class="oe_inline"/>
                     <field name="rin" />
                     <field name="config_marketplace_id" widget="many2one_tags" force_save="1" invisible="1"/>
                     <field name="config_marketplace_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                 </xpath>
                <!-- <xpath expr="//page[@name='inventory']//group//group//div[2]" position="after">
                     <label for="largo" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                        <div class="o_row" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                            <field name="largo" class="oe_inline"/>
                        </div>
                    <label for="ancho" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                        <div class="o_row" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                            <field name="ancho" class="oe_inline"/>
                    </div>
                    <label for="alto" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                        <div class="o_row" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                            <field name="alto" class="oe_inline"/>
                    </div>

                </xpath> -->
                <xpath expr="//page[@name='inventory']" position="after">
                    <page string="Marketplaces" >
                                <field name="config_marketplace_ids" mode="kanban" >
                                <kanban>
                                    
                                    <field name="id" />
                                    <field name="name"/>
                                    <field name="listado_marketplace" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                            <div>
                                                <b style="font-size:15px"><field name="listado_marketplace"/></b><br/>
                                                <field name="tipo_producto"/>
                                                
                                            </div>
                                              </div>  
                                        </t>
                                    </templates>
                                </kanban>
                                    <form string="Contact / Address">
                                        <sheet>
                                             <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                                            <group>
                                                <field name="listado_marketplace" required="1" widget="radio" options="{'horizontal': true}"/>
                                                <group>
                                                    <field name="tipo_producto" required="1" widget="selection" />
                                                </group>
                                            </group>
                                            <field name="id" invisible="1"/>
                                            
                                        <group>
                                            <group string="Codigo" >
                                                <field name="codigo_paquete_clasico" />
                                                <field name="codigo_paquete_premium" />
                                            </group>
                                            <group string="ID" >
                                                <field name="id_clasico" />
                                                <field name="id_premium" />
                                                <field name="id_paquete_clasico" />
                                                <field name="id_paquete_premium" />
                                            </group>
                                            
                                            <group string="Categorias" >
                                                <field name="categoria"/>
                                                <field name="garantia"/>
                                            </group>
                                            
                                            <group string="SKU" >
                                                <field name="sku_individual" />
                                                <field name="sku_paquete" />
                                            </group>
                                            <group string="Codigos" >
                                                <field name="codigo_ean" />
                                                <field name="codigo_ean_paquete" />
                                                <field name="codigo_proveedor" />
                                            </group>
                                            <group string="Info extra" >
                                                <field name="no_tienda" />
                                                <field name="no_proveedor" />
                                                <field name="grupo_articulo" />
                                                <field name="palabra_clave" />
                                                <field name="precio" />
                                                <field name="precio_descuento" />
                                                <field name="estado_publicacion" />
                                                <field name="condicion" />
                                                <field name="garantia" />
                                            </group>
                                            <group string="Información llantas" attrs="{'invisible': [('tipo_producto', '!=', '01')]}">
                                                <field name="marca" />
                                                <field name="modelo" />
                                                <field name="peso" />
                                                <field name="medida" />
                                                <field name="material" />
                                                <field name="medida_llanta" />
                                                <field name="medida_rin" />
                                                
                                                
                                            </group>  
                                            <group string="Información amortiguadores" attrs="{'invisible': [('tipo_producto', '!=', '02')]}">
                                                <field name="marca" />
                                                <field name="modelo" />
                                                <field name="tipo_vehiculo" />
                                                <field name="posicion" />
                                                <field name="lado" />
                                                <field name="ano_vehiculo" />
                                                
                                                
                                            </group>
                                            <group string="Información maquina de hielo" attrs="{'invisible': [('tipo_producto', '!=', '03')]}">
                                                <field name="marca" />
                                                <field name="modelo" />
                                                <field name="voltaje" />
                                                <field name="potencia" />
                                                <field name="capacidad_produccion" />
                                                <field name="capacidad_almacenamiento" />
                                                <field name="forma_hielo" />
                                                <field name="material" />
                                                
                                                
                                            </group>
                                            
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Compatibilidad" >
                        <div>
                            <field name="compatibilidad_ids" string="Compatibilidad"  options="{'no_create_edit': True}">
                                <tree>
                                    <field name="brand_id" widget="many2one"/> 
                                    <field name="model_id" widget="many2one"/>
                                    <field name="year" widget="year"/>
                                    <field name="version" />
                                    <field name="medida" />
                                </tree>
                            </field>
                        </div>
                        
                    </page>
                </xpath>
                
            </field>
        </record>

 
        <record id="view_product_template_kanban_inherit" model="ir.ui.view">
            <field name="name">Product_template_kanban_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='activity_state']" position="after">
                    <div>
                        
                        <field name="alto"/>
                         <field name="ancho" />
                         <field name="rin" />
                         <field name="modelo_llanta" />
                         <field name="marca_llanta" />
                         <field name="medida_llanta" />
                        <field name="es_llanta"/>
                    </div>
                </xpath>
                <xpath expr="//div[@name='product_lst_price']" position="after">
                    <div attrs="{'invisible': [('es_llanta', '=', False)]}">
                        <table>
                            <tr>
                                <td><b>Alto:</b></td>
                                <td><field name="alto"/></td>
                                <td><b>Ancho:</b></td>
                                <td><field name="ancho"/></td>
                            </tr>
                            <tr>
                                <td><b>Rin:</b></td>
                                <td><field name="rin"/></td>
                                <td><b>Marca:</b></td>
                                <td><field name="marca_llanta"/></td>
                            </tr>
                            <tr>
                                <td><b>Medida:</b></td>
                                <td><field name="medida_llanta"/></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </xpath>
            </field>
        </record>
        
        <record id="view_product_search" model="ir.ui.view">
            <field name="name">productos_search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//search//field[@name='name']" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|', '|', '|', ('default_code', 'ilike', self), ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self), ('sku_alternos', 'ilike', self)]"/>
                     <field name="sku_alternos" string="Sku alterno" filter_domain="[('sku_alternos', 'ilike', self)]"/>
                     <field name="alto" class="oe_inline"/>
                     <field name="ancho" class="oe_inline"/>
                     <field name="rin" />
                     <field name="modelo_llanta" />
                     <field name="marca_llanta" />
                     <field name="medida_llanta" />
                </xpath>
            </field>
        </record>

        <record id="view_product_supplierinfo" model="ir.ui.view">
            <field name="name">productos_supplierinfo</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//tree//field[@name='min_qty']" position="before">
                    <field name="existencia_actual" optional="hide"/>
                    <field name="precio_neto" optional="hide"/>
                    <field name="tipo_cambio" optional="hide"/>
                    <field name="tipo_moneda_proveedor" optional="hide"/>
                    <field name="ultima_actualizacion" optional="show"/>
                    
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="report_control_de_aplicacion"
            model="project.task"
            string="Control de aplicaciones"
            report_type="qweb-pdf"
            name="adrone_config.report_control_de_aplicaciones"
            file="adrone_config.report_control_de_aplicaciones"
            attachment_use="True"
            print_report_name = "('Control de aplicacions')"/>
        
        <template id="report_control_de_aplicaciones">
            
            <t t-name="adrone_config.report_control_de_aplicaciones">
                <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout"> 
                    <h1><center>Orden de aplicación</center></h1><br/><br/><br/>
                    <div id="informations" class="row mt-2 mb-32">
                        <div t-if="doc.partner_id" class="col-6 bm-2">
                            <center>
                                <strong>Cliente:</strong>
                                <span t-field="doc.partner_id.name" class="m-0" />
                            </center>
                        </div>
                        <div t-if="doc.create_date" class="col-6 bm-2">
                            <center>
                                <strong>Fecha de orden:</strong>
                                <p t-field="doc.create_date" class="m-0" />
                            </center>
                        </div>
                    </div>
                    <br/><br/><br/>
                    <div>
                        
                        <table class="table">
                            <tr>
                                <td style="width: 25%">Cultivo: </td>
                                <td style="width: 25%"><span t-field="doc.name"/></td>
                                <td style="width: 25%">ID parcela: </td>
                                <td style="width: 25%"></td>
                                
                            </tr>
                            <tr>
                                <td>Lugar de aplicacion: </td>
                                <td><span t-field="doc.lugar"/></td>
                                <td>Hora inicio: </td>
                                <td></td>
                                
                            </tr>
                            <tr>
                                <td>Area de aplicacion total: </td>
                                <td></td>
                                <td>Hora termino: </td>
                                <td></td>
                                
                            </tr>
                            <tr>
                                <td colspan="2">Area de aplicacion total: </td>

                                <td colspan="2"></td>
                                
                            </tr>
                            <tr>
                                <td colspan="4" align="center">Productos</td>
                               
                            </tr>
                            <tr><td colspan="4"></td></tr>
                            <tr><td colspan="4"></td></tr>
                            <tr><td colspan="4"></td></tr>
                            <tr><td colspan="4"></td></tr>
                            <tr>
                                <td colspan="1">Tipo</td>
                                <td colspan="3"><span t-field="doc.tipo_prod" widget="many2many_tags"/></td>
                                
                            </tr>
                            <tr>
                                <td>Volumen de aplicación total</td>
                                <td><span t-field="doc.volumen" /></td>
                                <td>Altura sobre cultivo</td>
                                <td><span t-field="doc.altura"/></td>

                                
                            </tr>
                            <tr>
                                <td>Velocidad de vuelo</td>
                                <td><span t-field="doc.velocidad" /></td>
                                <td>Espacio entre pasadas</td>
                                <td><span t-field="doc.espacio_surcos" /></td>

                                
                            </tr>
                            <tr><td colspan="4"></td></tr>
                            <tr><td colspan="4"></td></tr>
                            <tr >
                                <td colspan="2" align="center">___________________</td>
                                <td colspan="2" align="center">___________________</td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><span t-field="doc.asignado"/></td>
                                <td colspan="2" align="center">Supervisor</td>
                            </tr>
                        </table>
                    </div>

                </t>
                </t>
                </t>
            </t>
           
        
        </template>
    </data>
</odoo>
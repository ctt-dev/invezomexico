<odoo>
    <data>
        <record id="action_view_import_flight_sheets" model="ir.actions.act_window">
            <field name="name">Hoja de vuelo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">adrone_config.import.flight</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_import_flight_sheet_form" model="ir.ui.view">
            <field name="name">Importar hoja de vuelo</field>
            <field name="model">adrone_config.import.flight</field>
            <field name="arch" type="xml">
                <form string="Importar Documento">
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_data" filename="file_name" widget="binary"/>
                    </group>
                    <footer>
                        <button name="import_data" string="Importar" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancelar" class="btn-secondary"/>
                    </footer>
                </form>
           </field>
        </record>

        <menuitem id="menu_vuelos" name="Vuelos" parent="industry_fsm.fsm_menu_root" sequence="11"/>
        <menuitem id="menu_import_flight_sheet" 
            action="action_view_import_flight_sheets"
            name="Importar hoja de vuelos" 
            parent="adrone_config.menu_vuelos" 
            sequence="1"/>
        <!-- <menuitem id="menu_marketplaces_categories" 
            action="action_marketplaces_categories"
            name="CategorÃ­as" 
            parent="menu_marketplaces" 
            sequence="2"/> -->
    </data>
</odoo>
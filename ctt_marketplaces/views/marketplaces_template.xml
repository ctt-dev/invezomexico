<odoo>
    <data>
        <record id="marketplaces_template_form" model="ir.ui.view">
            <field name="name">Marketplaces.template.form</field>
            <field name="model">marketplaces.template</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="mkt_id"/>
                            <field name="marketplace_title"/>
                            <field name="marketplace_categ_id"/>
                        </group>
                        <group string="Descripción">
                            <field colspan="2" name="marketplace_description" nolabel="1" placeholder="Descripción en Marketplace"/>
                        </group>
                        <separator string="Campos generales de marketplace" colspan="1"/>
                        <field name="field_lines" widget="one2many">
                            <tree editable="bottom">
                                <field name="field_id"/>
                                <field name="value"/>
                            </tree>
                        </field>
                        <separator string="Atributos de categoria" colspan="1"/>
                        <field name="attr_lines" widget="one2many">
                            <tree editable="bottom">
                                <field name="attr_id"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="marketplace_template_kanban_view" model="ir.ui.view">
        <field name="name">marketplace.kanban</field>
        <field name="model">marketplaces.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="mkt_id"/>
                <field name="mkt_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="card oe_kanban_global_click p-0">
                            <div class="card-body p-0">
                                <h4 class="card-title p-2 m-0 bg-200">
                                    <small><field name="mkt_id"/></small>
                                </h4>
                            </div>
                            <t t-name="kanban-box-bottom">
                                <!-- Agrega una línea horizontal de botones al final -->
                                <div class="o_kanban_bottom">
                                </div>
                            </t>
                        </div>
                    </t>
                </templates>    
            </kanban> 
        </field>
    </record>
    </data>
</odoo>
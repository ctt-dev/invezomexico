<odoo>
    <data>
        <record id="redirect_settings_action" model="ir.actions.server">
            <field name="name">Redirection to Mercado Libre settings</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="base.model_res_config_settings"/>
            <field name="state">code</field>
            <field name="code">action = model._ml_redirect_settings()</field>
        </record>

        <record id="ctt_meli_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ctt.meli</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="ctt_marketplaces.ctt_marketplaces_res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='marketplaces_settings_block']" position="inside">
                        <h2>Mercado Libre API</h2>
                        <div class="col-xs-12 row o_settings_container" id="mercado_libre_login">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane border-start-0">
                                    <div class="content-group">
                                        <div class="row mt4">
                                            <label class="col-lg-3" for="mercado_libre_app_id"/>
                                            <field name="mercado_libre_app_id"/>
                                        </div>
                                        <div class="row mt4">
                                            <label class="col-lg-3" for="mercado_libre_client_secret"/>
                                            <field name="mercado_libre_client_secret" password="True"/>
                                        </div>
                                        <div class="row mt4">
                                            <label class="col-lg-3" for="mercado_libre_redirect_url"/>
                                            <field name="mercado_libre_redirect_url"/>
                                        </div>
                                        <div class="row mt4">
                                            <label class="col-lg-3" for="mercado_libre_token"/>
                                            <field name="mercado_libre_token" readonly="1" password="True"/>
                                        </div>
                                        <div class="row mt4">
                                            <label class="col-lg-3" string="Ultimo Login" for="mercado_libre_token_request_time"/>
                                            <field name="mercado_libre_token_request_time" readonly="1"/>
                                        </div>
                                        <div class="row mt4">
                                            <label class="col-lg-3" string="ExpiraciÃ³n" for="mercado_libre_token_expires"/>
                                            <field name="mercado_libre_token_expires" readonly="1"/>
                                        </div>
                                        <div class="mt4">
                                            <button type="object" name="mercado_libre_get_token" string="Obtener Token" icon="fa-arrow-right" class="btn-link"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="mercado_libre_settings_menu_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="base.res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'ctt_mercado_libre'}</field>
        </record>
        
        <record id="redirect_settings_action" model="ir.actions.server">
            <field name="name">Redirection to Mercado Libre settings</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="base.model_res_config_settings"/>
            <field name="state">code</field>
            <field name="code">action = model._ml_redirect_settings()</field>
        </record>
        
        <record id="ctt_meli_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ctt.meli</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Mercado Libre" string="Mercado Libre" data-key="ctt_mercado_libre">
                        <h2>Mercado Libre</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">App settings</span>
                                    <div class="content-group mt16">
                                        <label for="mercado_libre_app_id" class="o_light_label mr8"/>
                                        <field name="mercado_libre_app_id" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_client_secret" class="o_light_label mr8"/>
                                        <field name="mercado_libre_client_secret" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_redirect_url" class="o_light_label mr8"/>
                                        <field name="mercado_libre_redirect_url" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_code" class="o_light_label mr8"/>
                                        <field name="mercado_libre_code" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_token" class="o_light_label mr8"/>
                                        <field name="mercado_libre_token" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_refresh_token" class="o_light_label mr8"/>
                                        <field name="mercado_libre_refresh_token" class="oe_inline"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_is_connect" class="o_light_label mr8"/>
                                        <field name="mercado_libre_is_connect" class="oe_inline" readonly="1"/>
                                    </div>
                                    <div class="content-group">
                                        <label for="mercado_libre_token_valid" class="o_light_label mr8"/>
                                        <field name="mercado_libre_token_valid" class="oe_inline" readonly="1"/>
                                    </div>
                                    <button type="object" name="mercado_libre_get_token" string="Get token" icon="fa-arrow-right" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>  
    </data>
</odoo>
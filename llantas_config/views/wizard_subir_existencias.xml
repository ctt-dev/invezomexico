<odoo>
    <data>
        <record id="action_view_import_existencias_proveedores" model="ir.actions.act_window">
            <field name="name">Importar existencias proveedores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">llantas_config.ctt_prov_cargar_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_import_existencias_proveedores_form" model="ir.ui.view">
            <field name="name">Importar existencia de proveedores</field>
            <field name="model">llantas_config.ctt_prov_cargar_wizard</field>
            <field name="arch" type="xml">
                <form string="Importar Documento">
                    <group>
                        <field name="proveedor_id" widget="list"/>
                        <!-- <field name="proveedor"/> -->
                        <field name="tipo_cambio" />
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_data" filename="file_name" widget="binary"/>
                    </group>
                    <footer>
                        <button name="import_data" string="Importar" type="object" class="btn-primary"/>
                        <button name="dejar_en_cero" string="Existencias en 0" type="object" class="btn-warning"/>
                        
                        <button special="cancel" string="Cancelar" class="btn-secondary"/>
                    </footer>
                </form>
           </field>
        </record>

        <menuitem id="menu_ctt_llantas_proveedores_list_cargar_proveedores" name="Cargar existencias" parent="menu_ctt_llantas_marketplace_list" sequence="1" action="action_view_import_existencias_proveedores"/>
        
    </data>
</odoo>
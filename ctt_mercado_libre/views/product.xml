<odoo>
    <data>
        <record id="ctt_mercado_libre_product_template_form" model="ir.ui.view">
            <field name="name">Product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <notebook>
                    <page string="Mercado Libre">
                        <div class="oe_button_box" name="button_box_mel">
                            <button name="predict_category" 
                                type="object" 
                                string="Sugerir Categoria"
                                class="oe_stat_button" 
                                icon="fa-refresh"/>
                            <button name="publicar_producto" 
                                type="object" 
                                string="Publicar producto"
                                class="oe_stat_button" 
                                icon="fa-cloud-upload"/>
                        </div>
                        <separator string="Plantilla en Mercado Libre" colspan="1"/>
                        <group>
                            <field name="meli_categ_id"/>
                        </group>
                        <group string="Descripción">
                            <field colspan="2" name="mercadolibre_description" nolabel="1" placeholder="Descripción en Mercado Libre"/>
                        </group>
                        <separator string="Atributos en Mercado Libre" colspan="1"/>
                        <field name="meli_categ_attribute_ids" widget="one2many">
                            <tree editable="bottom">
                                <field name="categ_id" invisible="1"/>
                                <field name="has_value" invisible="1"/>
                                <field name="attr_units" invisible="1"/>
                                <field name="attr_id" domain="[('required','=',True),('categ_id','=',categ_id)]" options="{'no_open': True, 'no_create': True}"/>
                                <field name="value_id" domain="[('attr_id','=',attr_id)]" attrs="{'readonly':[('has_value', '=', False)]}" options="{'no_open': True, 'no_create': True}"/>
                                <field name="value" attrs="{'readonly':[('has_value', '=', True)]}"/>
                                <field name="unit_id" domain="[('id','in',attr_units)]" options="{'no_open': True, 'no_create': True}"/>
                            </tree>
                        </field>
                        <group>
                            <group>
                                <separator string="Datos de venta" colspan="1"/>
                                <field name="mercadolibre_buying_mode"/>
                                <field name="mercadolibre_condition"/>
                                <field name="mercadolibre_listing_type"/>
                                <field name="mercadolibre_warranty_type"/>
                                <field name="mercadolibre_warranty"/>
                                <field name="mercadolibre_warranty_unit"/>
                            </group>
                            <group>
                                <separator string="Datos de envio" colspan="1"/>
                                <field name="mercado_shipping_mode"/>
                                <field name="mercadolibre_local_pick_up"/>
                                <field name="mercadolibre_store_pick_up"/>
                                <field name="mercadolibre_free_shipping"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="form_view_account_move_inherit" model="ir.ui.view">
            <field name="name">Account_move</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoice_tab']//field//tree//field[@name='account_id']" position="after">
                    <!-- <field name="no_pedimento"/> -->
                    <field name="pronto_pago"/>
                    <field name="product_category" invisible="1"/>
                    <field name="proveedor" invisible="1"/>
                    <field name="dias_transcurridos" invisible="1" force_save="1"/>
                </xpath>
                <xpath expr="//page[@name='invoice_tab']" position="after">
                    <page string="Info pronto pago">
                        <group>
                            <field name="pronto_pago_dias_vencimiento" string="Pronto pago - DÃ­as de vencimiento" readonly="1"/>
                            <field name="pronto_pago_porcentaje" string="Pronto pago - Porcentaje" readonly="1"/>
                            <field name="pronto_pago_fecha_vencimiento" readonly="1"/>
                            <field name="pronto_pago_dias_para_vencimiento" readonly="1"/>
                            <field name="pronto_pago_descuento" readonly="1"/>
                            <field name="pronto_pago_total_con_descuento" readonly="1"/>
                            <field name="total_facturado" invisible="1" readonly="1" />
                        </group>
                    </page>
                </xpath>
                <!-- <xpath expr="//page[@name='invoice_tab']//field/tree//field[@name='discount']" position="after">
                        <field name="pronto_pago"/>
                </xpath> -->
            </field>
        </record>
        
        <record id="account_view_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account_view_invoice_tree_inherit</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="partner_id" optional="hide"/>
                    <field name="marketplace_sale_order" optional="show" />
                    <field name="pronto_pago_dias_vencimiento" optional="hide"/>
                    <field name="pronto_pago_porcentaje" optional="hide"/>
                    <field name="pronto_pago_fecha_vencimiento" optional="hide"/>
                    <field name="pronto_pago_dias_para_vencimiento" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='company_currency_id']" position="before">
                    <field name="pronto_pago_descuento" sum="pronto_pago_descuento" optional="hide"/>
                    <field name="pronto_pago_total_con_descuento" sum="pronto_pago_total_con_descuento" optional="hide"/>
                    </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="cfdi_document" optional="hide"/>
                    <field name="exchange_rate" optional="hide"/>
                    
                </xpath>
            </field>
        </record>

        <record id="account_view_invoice_search_inherit" model="ir.ui.view">
            <field name="name">account_view_invoice_search_inherit</field>
            <field name="model">account.move</field>
             <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search//field[@name='journal_id']" position="before">
                    <field name="partner_id" string="Cliente (Exacto)" filter_domain="[('partner_id.name', '=', self)]"/>
                    <field name="marketplace_sale_order" />
                    
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="ctt_mercado_libre_product_template_form" model="ir.ui.view">
            <field name="name">Product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <notebook>
                    <page string="Mercado Libre">
                        <div class="oe_button_box" name="button_box_mel">
                            <button name="predict_category" 
                                type="object" 
                                string="Sugerir Categoria"
                                class="oe_stat_button" 
                                icon="fa-refresh"/>
                            <button name="import_category" 
                                type="object" 
                                string="Importar Categoria"
                                class="oe_stat_button" 
                                icon="fa-list"/>
                            <button name="publicar_producto" 
                                type="object" 
                                string="Publicar producto"
                                class="oe_stat_button" 
                                icon="fa-cloud-upload"/>
                        </div>
                        <separator string="Plantilla en Mercado Libre" colspan="1"/>
                        <group>
                            <group>
                                <field name="mercadolibre_category_id"/>
                                <field name="mercadolibre_BRAND"/>
                                <field name="mercadolibre_MODEL"/>
                                <field name="mercadolibre_LOAD_INDEX"/>
                                <field name="mercadolibre_TIRES_NUMBER"/>
                                <field name="mercadolibre_AUTOMOTIVE_TIRE_ASPECT_RATIO"/>
                                <field name="mercadolibre_IS_RUN_FLAT"/>
                            </group>
                            <group>
                                <field name="mercadolibre_SECTION_WIDTH"/>
                                <field name="mercadolibre_RIM_DIAMETER"/>
                                <field name="mercadolibre_LOAD_RANGE"/>
                                <field name="mercadolibre_TERRAIN_TYPE"/>
                                <field name="mercadolibre_TIRE_CONSTRUCTION_TYPE"/>
                                <field name="mercadolibre_UNIT_TYPE"/>
                            </group>
                        </group>
                        <separator string="Datos de venta" colspan="1"/>
                        <group>
                            <field name="mercadolibre_price"/>
                            <field name="mercadolibre_buying_mode"/>
                            <field name="mercadolibre_condition"/>
                            <field name="mercadolibre_listing_type"/>
                            <field name="mercadolibre_warranty_type"/>
                            <field name="mercadolibre_warranty"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
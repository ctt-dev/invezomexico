<odoo>
    <data>
        <record id="form_view_res_partner_inherit" model="ir.ui.view">
            <field name="name">contactos</field>
            <field name="model">res.partner</field>
             <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group//group[2]//field[@name='category_id']" position="after">
                    <field name="usuario_marketplace"/>
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="Pronto pago">
                        <div>
                            <field name="pronto_pago">
                                <tree string="Pronto pago" editable="top">
                                    <field name="name"/>
                                    <field name="pronto_pago_dias_vencimiento" string="DÃ­as de vencimiento"/>
                                    <field name="pronto_pago_porcentaje" string="Porcentaje"/>
                                    <field name="product_category" options="{'no_create_edit': True}"/>
                                    <field name="partner_id" invisible="1"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="form_view_res_partner_inherit_search" model="ir.ui.view">
            <field name="name">busqueda contactos</field>
            <field name="model">res.partner</field>
             <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search//field[@name='name']" position="after">
                    <field name="name" string="Contacto exacto" filter_domain="[('name', '=', self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
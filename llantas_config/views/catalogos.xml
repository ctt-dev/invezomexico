    <record id="tree_view_marketplaces" model="ir.ui.view">
            <field name="name">tree.marketplace</field>
            <field name="model">llantas_config.marketplaces</field>
            <field name="arch" type="xml">
                <tree string="Status" sample="1" multi_edit="1">
                    <field name="name" required="1"/>
                    <field name="url" />
                    <field name="mostrar_comision" />
                    <field name="mostrar_envio"/>
                    <field name="category_id" widget="many2one_tags"/>
                    <field name="diarios_id" domain="['|', ('name','ilike','Venta'), ('name','ilike','venta')]"/>
                    <field name="company_id" invisible="1"/>
                    <field name="imagen"/>
                    <field name="color" widget="color_picker" required="0"/>
                    <field name="yuju_tag" />
                    <field name="venta_directa" />
                </tree>
            </field>
        </record>

        <record id="ctt_llantas_action_view_marketplaces_form" model="ir.ui.view">
            <field name="name">form</field>
            <field name="model">llantas_config.marketplaces</field>
            <field name="arch" type="xml">
                <form string="Resumen">
                    <sheet string="View">
                        <field name="imagen" widget="image" class="oe_avatar" />
                        <!-- <header>
                            <button name="process_link" string="Procesar Link" type="object" class="btn-primary"/>
                        </header> -->
                        
                        <div class="oe_button_box" />
    
                            <group string="Información" >
                                <field name="name"/>
                                <field name="url" />
                                <field name="mostrar_comision" />
                                <field name="mostrar_envio"/>
                                <field name="category_id" readonly="0"/>
                                <field name="diarios_id" domain="['|', ('name','ilike','Venta'), ('name','ilike','venta')]"/>
                                <field name="venta_directa" />
                                <field name="company_id" invisible="1"/>
                                
                                <field name="color" widget="color_picker" required="0"/>
                            </group>
                            
         
                    </sheet>
                    <div class="oe_chatter">
                            <!-- <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/> -->
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="llantas_marketplaces">

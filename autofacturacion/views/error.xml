<odoo>
  <template id="portal_auto_invoices_error" name="Auto Invoices">
      <t t-call="portal.portal_layout">
            <t t-if="breadcrumbs_searchbar">
                  <t t-call="portal.portal_breadcrumbs"/>
              </t>
          <t t-set="breadcrumbs_searchbar" t-value="True"/>
          <br/>
          <h3 t-esc="error"/>
           <input  name="order_id" id="order_id" t-att-value = "order_id" placeholder="" style="display:none;" class="form-control"/>
          <a onclick="this.href='/autofacturador/timbrar/'+document.getElementById('order_id').value"
                            >
              <t t-if="error">
              </t>
              <t t-esle="">
                  <button  type="button" class="btn btn-primary">Descargar</button>
              </t>
              </a>
      </t>
  </template>
  </odoo>
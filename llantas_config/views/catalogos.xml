        <record id="ctt_llantas_action_view_almacen_form" model="ir.ui.view">
            <field name="name">form</field>
            <field name="model">llantas_config.almacen</field>
            <field name="arch" type="xml">
            <form string="Resumen">
                <sheet string="View">
                    <div class="oe_button_box" />

                        <group string="Información" >
                            <field name="name"/>
                            <field name="proveedor" domain="[('category_id','like','PROVEEDOR')]"/>
                            <field name="color" widget="color_picker" required="0"/>
                        </group>
                        
     
                </sheet>
                <div class="oe_chatter">
                        <!-- <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/> -->
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
            </field>
        </record>
        

<odoo>
    <data>
        <record id="marketplaces_template_form" model="ir.ui.view">
            <field name="name">Marketplaces.template.form</field>
            <field name="model">marketplaces.tamplate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="mkt_id"/>
                            <field name="marketplace_title"/>
                            <field name="marketplace_categ_id"/>
                        </group>
                        <group string="Descripción">
                            <field colspan="2" name="marketplace_description" nolabel="1" placeholder="Descripción en Marketplace"/>
                        </group>
                        <separator string="Campos generales de marketplace" colspan="1"/>
                        <field name="field_lines" widget="one2many">
                            <tree editable="bottom">
                                <field name="field_id"/>
                                <field name="value"/>
                            </tree>
                        </field>
                        <separator string="Atributos de categoria" colspan="1"/>
                        <field name="attr_lines" widget="one2many">
                            <tree editable="bottom">
                                <field name="attr_id"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
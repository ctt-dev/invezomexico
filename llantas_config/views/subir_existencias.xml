<odoo>
    <data>
        <record id="view_proveedores_tree_cargar" model="ir.ui.view">
            <field name="name">Existencias</field>
            <field name="model">llantas_config.ctt_prov_cargar</field>
            <field name="arch" type="xml">
                <tree edit="0" sample="1">
                    <field name="nombre_proveedor" />
                    <field name="referencia_producto"/>
                    <field name="nombre_producto" />
                    <field name="almacen_existencia" />       
                    <field name="existencias" />
                    <field name="costo_sin_iva" />
                    <field name="moneda" optional="hide"/>
                    <field name="tipo_cambio" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="fecha_proveedor"/>
                </tree>
            </field>
        </record>

        <record id="view_tiredirect_tree_cargar" model="ir.ui.view">
            <field name="name">Existencias</field>
            <field name="model">llantas_config.ctt_tiredirect_cargar</field>
            <field name="arch" type="xml">
                <tree edit="0" sample="1">
                    <field name="clave_parte" />
                    <field name="description_description"/>
                    <field name="Existencia_Stock" />
                    <field name="moneda_currency" />
                    <field name="TC" />
                    
                    <field name="ES" />
                    <field name="FS" />
                </tree>
            </field>
        </record>

        <record id="ctt_llantas_action_proveedor_list_search" model="ir.ui.view">
            <field name="name">Buscar</field>
            <field name="model">llantas_config.ctt_prov_cargar</field>
            <field name="arch" type="xml">
               <search string="Buscar">
                   <field name="nombre_proveedor" string="Venta" filter_domain="['|',('nombre_proveedor', 'ilike', self),('referencia_producto', 'ilike', self)]"/>

                    <field string="SKU" name="referencia_producto" filter_domain="[('referencia_producto', 'ilike', self)]"/>
                   <field name="nombre_producto" filter_domain="[('nombre_producto', 'ilike', self)]"/>
                   

                   <filter string="TireDirect" name="nombre_proveedor" domain="[('nombre_proveedor', '=', 'TireDirect')]"/>
                  
               
                    <separator/>
                   <group expand="0" string="Group By">
                    <filter string="Proveedor" name="cargar_nombre_proveedor" domain="[]" context="{'group_by': 'nombre_proveedor'}"/>
                       <filter string="Almacén" name="almacen_existencia" domain="[]" context="{'group_by': 'almacen_existencia'}"/>
                       <filter string="fecha de proveedor" name="fecha_proveedor" domain="[]" context="{'group_by': 'fecha_proveedor'}"/>
                       
                    
                       
                       
                    </group>
                       
                </search>
            </field>
        </record>


        <record id="ctt_llantas_action_proveedor_list_form_cargar" model="ir.actions.act_window">
            <field name="name">Consultar existencias</field>
            <field name="res_model">llantas_config.ctt_prov_cargar</field>
            <field name="view_mode">tree</field>
            <field name="context">{'create': True}</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p><p>
                    Aqui aparecerán los registros de existencia de proveedores.
                </p>
            </field>
        </record>

        <record id="ctt_llantas_action_tiredirect_list_form_cargar" model="ir.actions.act_window">
            <field name="name">Consultar existencias</field>
            <field name="res_model">llantas_config.ctt_tiredirect_cargar</field>
            <field name="view_mode">tree</field>
            <field name="context">{'create': True}</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p><p>
                    Aqui aparecerán los registros de existencia de proveedores.
                </p>
            </field>
        </record>



        <!-- <menuitem id="menu_ctt_llantas_proveedores_list_cargar" name="Consultar existencias" parent="menu_ctt_llantas_ctrl_list" sequence="3" action="ctt_llantas_action_proveedor_list_form_cargar"/> -->
        <menuitem id="menu_ctt_llantas_tiredirect_list_cargar" name="Cargar existencias tiredirect" parent="menu_ctt_llantas_marketplace_list" sequence="4" action="ctt_llantas_action_tiredirect_list_form_cargar"/>
    </data>
</odoo>
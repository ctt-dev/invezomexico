<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="report_control_de_aplicacion"
            model="project.task"
            string="Control de aplicaciones"
            report_type="qweb-pdf"
            name="adrone_config.report_control_de_aplicaciones"
            file="adrone_config.report_control_de_aplicaciones"
            attachment_use="True"
            print_report_name = "('Control de aplicacions')"/>
        
        <template id="report_control_de_aplicaciones">
            <t t-name="adrone_config.report_control_de_aplicaciones">
            <t t-call="web.external_layout">
                <div class="article" t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="address">
                        <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;vat&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </t>
                    <t t-if="o.dest_address_id">
                        <t t-set="information_block">
                            <strong>Shipping address:</strong>
                            <div t-if="o.dest_address_id">
                                <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}" name="purchase_shipping_address"/>
                            </div>
            
                        </t>
                    </t>
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <br/>
                            <center style="font-size:13px">
                                <span t-esc="company.name"/>
                            </center><br/>
                            <div>
                                <h5><center>Orden de aplicacion</center></h5><br/>
                                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
            </t>
        </template>
    </data>
</odoo>
<odoo>
    <data>
        <record id="view_purchase_order_pos_form" model="ir.ui.view">
            <field name="name">purchase.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='products']//field//tree//field[@name='product_qty']" position="after">
                    <field name="codigo_proveedor"/>
                    
                </xpath>
                <xpath expr="//page[@name='products']//field//tree//field[@name='price_subtotal']" position="after">
                    <field name="pronto_pago" /> 
                    <field name="descuento" widget="monetary" readonly="1"/>
                    <field name="total_pronto_pago" widget="monetary" style="background-color: #c8e6c9;"  readonly="1"/>
                    <field name="product_category" invisible="1"/>
                    <field name="proveedor" invisible="1"/>
                    
                </xpath>
                
                <!-- <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="pronto_pago_dias_vencimiento" string="Pronto pago - DÃ­as de vencimiento"/>
                    <field name="pronto_pago_porcentaje" string="Pronto pago - Porcentaje"/>
                    <field name="pronto_pago" />
                </xpath> -->
            </field>
        </record>

    </data>
</odoo>
